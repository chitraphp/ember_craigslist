{{#if updateListingForm}}
  <h1>Update Listing</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input value=owner id="owner" placeholder=listing.owner}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=listing.title}}
        </div>

        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text" placeholder=listing.text}}
        </div>



        <div class="form-group">
          <label for="city">City</label>
          {{input value=city id="city" placeholder=listing.city}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image" placeholder=listing.image}}
        </div>

        <button {{action 'updateListing' listing}} class="btn btn-xs btn-default">Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'updateListingForm'}} class="btn btn-xs btn-default">Update</button>
{{/if}}
