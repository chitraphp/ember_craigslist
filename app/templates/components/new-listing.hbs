{{#if addNewListing}}
  <h1>New Listing</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input value=owner id="owner"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text"}}
        </div>



        <div class="form-group">
          <label for="city">City</label>
          {{input value=city id="city"}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image"}}
        </div>



        <button {{action 'saveListing'}} class="btn btn-xs btn-default">Save Listing</button>
      </form>
    </div>
{{else}}
    <button {{action 'categoryFormShow'}} class="btn btn-xs btn-default">New Listing</button>
{{/if}}
